extends ../includes/layout.pug


block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")


block mainContent

    if errorMessage
        div.user-message.user-message--error #{errorMessage}
    

    form.login-form(action="/signup", method="POST", novalidate)
        input(type="hidden", name='_csrf', value=csrfToken)
        
        div.form-control
            label(for="email") E-Mail
            input(
                class=validationErrors.find(e => e.param === 'email') ? 'invalid' : '', 
                type="email", 
                name="email", 
                id="email", 
                value=oldInputData.email
                )
        
        div.form-control
            label(for="password") Password
            input(
                class=validationErrors.find(e => e.param === 'password') ? 'invalid' : '',
                type="password", 
                name="password", 
                id="password", 
                value=oldInputData.password
                )
        
        div.form-control
            label(for="confirmPassword") Confirm Password
            input(
                class=validationErrors.find(e => e.param === 'password') ? 'invalid' : '', 
                type="password", 
                name="confirmPassword", 
                id="confirmPassword"
                )
        button.btn Sign up

