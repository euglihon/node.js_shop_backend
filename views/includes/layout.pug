<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        
        //- pug content block
        block styles 

    body
        div.backdrop
        header.main-header
            button(id="side-menu-toggle") Menu
            nav.main-header__nav
                ul.main-header__item-list
                
                    //- shop aria

                    li.main-header__item
                        a(href="/", class=(activePath === '/' ? 'active' : '')) Shop  

                    li.main-header__item
                        a(href="/products", class=(activePath === '/products' ? 'active' : '')) Products        


                    if isAuthenticated

                        li.main-header__item
                            a(href="/cart", class=(activePath === '/cart' ? 'active' : '')) Cart      

                        li.main-header__item
                            a(href="/orders", class=(activePath === '/orders' ? 'active' : '')) Orders      

                        //- admin aria
                  
                        li.main-header__item
                            a(href="/admin/add-product", class=(activePath === '/admin/add-product' ? 'active' : '')) Add product
                    
                        li.main-header__item
                            a(href="/admin/products", class=(activePath === '/admin/products' ? 'active' : '')) Admin products

            

                ul.main-header__item-list
                
                    if !isAuthenticated
                        
                        li.main-header__item
                            a(href="/login", class=(activePath === '/login' ? 'active' : '')) Login      
                        
                        li.main-header__item
                            a(href="/signup", class=(activePath === '/signup' ? 'active' : '')) Signup 

                    if isAuthenticated

                        li.main-header__item
                            form(action="/logout", method="POST")
                                input(type="hidden", name='_csrf', value=csrfToken)
                                button Logout


        //- temporary mobile navigation
        nav.mobile-nav
            ul.mobile-nav__item-list
                
                    //- shop aria

                    li.mobile-nav__item
                        a(href="/", class=(activePath === '/' ? 'active' : '')) Shop  

                    li.mobile-nav__item
                        a(href="/products", class=(activePath === '/products' ? 'active' : '')) Products        

                    if isAuthenticated

                        li.mobile-nav__item
                            a(href="/cart", class=(activePath === '/cart' ? 'active' : '')) Cart      

                        li.mobile-nav__item
                            a(href="/orders", class=(activePath === '/orders' ? 'active' : '')) Orders      

                        //- admin aria

                        li.mobile-nav__item
                            a(href="/admin/add-product", class=(activePath === '/admin/add-product' ? 'active' : '')) Add product
                    
                        li.mobile-nav__item
                            a(href="/admin/products", class=(activePath === '/admin/products' ? 'active' : '')) Admin products

                
                    if !isAuthenticated
                        
                        li.mobile-nav__item
                            a(href="/login", class=(activePath === '/login' ? 'active' : '')) Login      
                        
                        li.mobile-nav__item
                            a(href="/signup", class=(activePath === '/signup' ? 'active' : '')) Signup 

                    if isAuthenticated

                        li.mobile-nav__item
                            form(action="/logout", method="POST")
                                input(type="hidden", name='_csrf', value=csrfToken)
                                button Logout

    //- pug content block
    block mainContent


    //- add frontend script 
    script(src="/js/main.js")
