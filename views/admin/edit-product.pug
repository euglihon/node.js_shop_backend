extends ../includes/layout.pug


block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")


block mainContent
    form.product-form(action=`/admin/${editing === true ? 'edit-product' : 'add-product'}`, method="POST")
        
        div.form-control
            label(for="title") Title
            input(type="text", name="title", id="title", value=`${editing === true ? product.title : ''}`)
        
        div.form-control
            label(for="description") Description
            textarea(name="description", rows="5") #{editing === true ? product.description : ''}
        
        div.form-control
            label(for="price") Price
            input(type="number", name="price", id="price", step="0.01", value=`${editing === true ? product.price : ''}`)
        
        div.form-control
            label(for="imageURL") ImageURL
            input(type="text", name="imageURL", id="imageURL", value=`${editing === true ? product.imageURL : ''}`)
    

        if (editing == true) 
            input(type="hidden", value=product._id, name='productID')

        button.btn(type="submit")  #{editing === true ? 'Update Product' : 'Add Product'}
